<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="reporte" transaction-type="JTA">
	
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/datasources/MySQLDS</jta-data-source>
		
		<class>org.reporte.datasource.domain.DatabaseType</class>
		<class>org.reporte.datasource.domain.Datasource</class>
		<class>org.reporte.datasource.domain.ColumnMetadata</class>
		
		<class>org.reporte.model.domain.AttributeMapping</class>
		<class>org.reporte.model.domain.ComplexModel</class>
		<class>org.reporte.model.domain.Model</class>
		<class>org.reporte.model.domain.ModelQuery</class>
		<class>org.reporte.model.domain.SimpleModel</class>
		
		<class>org.reporte.reporttemplate.domain.BaseReportTemplate</class>
		<class>org.reporte.reporttemplate.domain.TemplateSeries</class>
		<class>org.reporte.reporttemplate.domain.AreaChartTemplate</class>
		<class>org.reporte.reporttemplate.domain.BarChartTemplate</class>
		<class>org.reporte.reporttemplate.domain.ColumnChartTemplate</class>
		<class>org.reporte.reporttemplate.domain.LineChartTemplate</class>
		<class>org.reporte.reporttemplate.domain.PieChartTemplate</class>
		<class>org.reporte.reporttemplate.domain.ReportQuery</class>
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>